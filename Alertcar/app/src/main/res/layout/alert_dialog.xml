<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="Alert"
        android:id="@+id/textView"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/cansel"
        android:layout_toEndOf="@+id/cansel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        android:text="ارسال رساله استغاسه الى اقرب مستشفى"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="مش موافق"
        android:background="#4477AA"
        android:textColor="#FFFFFF"
        android:id="@+id/cansel"
        android:textSize="30dp"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/accept"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="موافق"
        android:textSize="30dp"
        android:id="@+id/accept"
        android:onClick="delete_all"
        android:background="#4477AA"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alert"
        android:textSize="60dp"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>